{
  "openapi": "3.0.1",
  "info": {
    "title": "Smart Home Technologies API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:32999",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Склад магазина",
      "description": "API для обеспечения работы склада онлайн магазина"
    }
  ],
  "paths": {
    "/api/v1/warehouse": {
      "put": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Добавить новый товар на склад.",
        "operationId": "newProductInWarehouse",
        "requestBody": {
          "description": "Описание нового товара",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewProductInWarehouseRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Товар уже зарегистрирован",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/SpecifiedProductAlreadyInWarehouseExceptionDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/shipped": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Передать товары в доставку.",
        "operationId": "shippedToDelivery",
        "requestBody": {
          "description": "Запрос на передачу в доставку.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ShippedToDeliveryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/warehouse/return": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Принять возврат товаров на склад",
        "operationId": "acceptReturn",
        "requestBody": {
          "description": "Отображение идентификатора товара -> количество",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": {
                  "type": "integer",
                  "format": "int64"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/warehouse/check": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Проверить, что на складе достаточно товара под корзину",
        "operationId": "checkProductQuantityEnoughForShoppingCart",
        "requestBody": {
          "description": "Корзина товаров",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "common-schemas.json#/components/schemas/ShoppingCartDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Общие сведения по бронированию",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/BookedProductsDto"
                }
              }
            }
          },
          "400": {
            "description": "Товар из корзины отсутствует в БД склада",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/ProductInShoppingCartNotInWarehouseDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/assembly": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Собрать товары к заказу",
        "operationId": "assemblyProductsForOrder",
        "requestBody": {
          "description": "Корзина товаров",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssemblyProductsForOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Общие сведения по бронированию",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/BookedProductsDto"
                }
              }
            }
          },
          "400": {
            "description": "Товар не в нужном количестве",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/ProductInShoppingCartLowQuantityInWarehouseDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/add": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Увеличить количество товара на складе",
        "operationId": "addProductToWarehouse",
        "requestBody": {
          "description": "Запрос на добавление товара",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddProductToWarehouseRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Товар не найден на складе",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "common-schemas.json#/components/schemas/NoSpecifiedProductInWarehouseExceptionDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/address": {
      "get": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Предоставить адрес склада",
        "operationId": "getWarehouseAddress",
        "responses": {
          "200": {
            "description": "Актуальный адрес склада",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AddressDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DimensionDto": {
        "type": "object",
        "required": [
          "depth",
          "height",
          "width"
        ],
        "properties": {
          "width": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "height": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "depth": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          }
        },
        "description": "Габариты товара"
      },
      "NewProductInWarehouseRequest": {
        "required": [
          "dimension",
          "productId",
          "weight"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "fragile": {
            "type": "boolean"
          },
          "dimension": {
            "$ref": "#/components/schemas/DimensionDto"
          },
          "weight": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          }
        },
        "description": "Описание нового товара для склада"
      },
      "ShippedToDeliveryRequest": {
        "required": [
          "deliveryId",
          "orderId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "deliveryId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "description": "Запрос на передачу товаров в доставку"
      },
      "AssemblyProductsForOrderRequest": {
        "required": [
          "orderId",
          "products"
        ],
        "type": "object",
        "properties": {
          "products": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int64"
            }
          },
          "orderId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "description": "Запрос на сбор заказа из товаров"
      },
      "AddProductToWarehouseRequest": {
        "required": [
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "quantity": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          }
        },
        "description": "Увеличение единиц товара на складе"
      },
      "AddressDto": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "house": {
            "type": "string"
          },
          "flat": {
            "type": "string"
          }
        },
        "description": "Адрес склада"
      }
    }
  }
}
